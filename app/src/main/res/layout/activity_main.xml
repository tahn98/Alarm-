<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">


    <TimePicker
        android:layout_marginTop="50dp"
        android:id="@+id/timePicker"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TimePicker>

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="#ffffff"
        android:paddingHorizontal="5dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/btAlarmOn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Alarm On"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btAlarmOff"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="#ffffff"
        android:paddingHorizontal="5dp"
        android:background="@color/colorAccent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/btAlarmOff"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Alarm Off"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btAlarmOn"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="50dp"
        android:id="@+id/tvTime"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>